@model GneoCommonDataLibrary.Models.EnrollCourse

@{
    ViewData["Title"] = "Enroll";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2" style="padding-top:50px;">

            <h1> Enroll student to Course </h1>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Enroll">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="CourseID" class="control-label"></label>
                            <select asp-for="CourseID" class="form-control" asp-items="new SelectList(ViewBag.CourseID)">
                                <option value="">CourseIDs will be loaded here</option>
                            </select>

                            <span asp-validation-for="CourseID" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <label asp-for="StudentID" class="control-label"></label>
                            <select asp-for="StudentID" class="form-control" asp-items="new SelectList(ViewBag.CourseID)">
                                <option value="">StudentIDs will be loaded here</option>
                            </select>

                            <span asp-validation-for="StudentID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" a asp-controller="Course" asp-action="all"/>
                            <input type="button" value="Cancel" class="btn btn-warning" />
                        </div>
                        
                    </form>
                </div>


                <!--div>
                    <a asp-controller="Course" asp-action="all">All Courses</a>
                </div-->
            </div>
        </div>
    </div>
</div>


@section Scripts
        {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}