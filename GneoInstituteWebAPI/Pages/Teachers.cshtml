@page
@model IEnumerable<GneoCommonDataLibrary.Models.Teacher>
@{
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2" style="padding-top:40px;">
            <h1 class="text-center accent-gray">Teachers Details</h1>
            <table class="table table-dark table-hover">
                <tr class="text-center">
                    <th>Teacher ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Full Name</th>
                    <th>Courses</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.TeacherID</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.FullName</td>
                        <td>@item.CourseofTeacher</td>

                    </tr>
                }
            </table>
        </div>
    </div>
</div>